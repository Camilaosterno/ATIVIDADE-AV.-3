#include <stdio.h>
#include <string.h>

int mapSymbol(int s) {
    switch (s) {
        case 'I': return 1;
        case 'V': return 5;
        case 'X': return 10;
        case 'L': return 50;
        case 'C': return 100;
        case 'D': return 500;
        case 'M': return 1000;
        default: return 0;
    }
}

int convertToDecimal(const char *symbols) {
    int length = strlen(symbols);
    int result = 0;

    for (int i = length - 1; i >= 0; i--) {
        int current = mapSymbol(symbols[i]);
        int previous = (i > 0) ? mapSymbol(symbols[i - 1]) : 0;
        
        result += (current > previous) ? current : -current;
    }

    return result;
}

void displayBinary(int decimal) {
    printf(" in binary: ");
    int flag = 0;

    for (int i = 11; i >= 0; i--) {
        int bit = (decimal >> i) & 1;
        if (bit == 1 || flag == 1) {
            printf("%d", bit);
            flag = 1;
        }
    }
    printf("%s\n", (flag == 0) ? "0" : "");
}

int main() {
    char symbols[13];
    printf("Enter a set of symbols: ");
    scanf("%s", symbols);

    int decimalValue = convertToDecimal(symbols);

    printf("Symbol Set: %s", symbols);
    displayBinary(decimalValue);

    printf(" in decimal system: %d\n", decimalValue);
    
    printf("Hexadecimal Representation: %x\n", decimalValue);

    return 0;
}
