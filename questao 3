#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char vehiclePlate[10];
    char dayOfWeekInput[30];

    printf("Enter the vehicle plate: ");
    scanf("%s", vehiclePlate);

    printf("Enter the day of the week: ");
    scanf("%s", dayOfWeekInput);

    if ((strlen(vehiclePlate) == 8 && vehiclePlate[3] == '-' && isalpha(vehiclePlate[0]) && isalpha(vehiclePlate[1]) && isalpha(vehiclePlate[2]) && isdigit(vehiclePlate[4]) && isdigit(vehiclePlate[5]) && isdigit(vehiclePlate[6]) && isdigit(vehiclePlate[7])) ||
        (strlen(vehiclePlate) == 7 && isalpha(vehiclePlate[0]) && isalpha(vehiclePlate[1]) && isalpha(vehiclePlate[2]) && isdigit(vehiclePlate[3]) && isalpha(vehiclePlate[4]) && isdigit(vehiclePlate[5]) && isdigit(vehiclePlate[6]))) {

        char lastDigitPlate = vehiclePlate[strlen(vehiclePlate) - 1];

        if (strcmp(dayOfWeekInput, "MONDAY") == 0) {
            if (lastDigitPlate == '0' || lastDigitPlate == '1') {
                printf("Vehicle with plate %s cannot circulate on Monday.\n", vehiclePlate);
            } else {
                printf("Vehicle with plate %s can circulate on Monday.\n", vehiclePlate);
            }
        } else if (strcmp(dayOfWeekInput, "TUESDAY") == 0) {
            if (lastDigitPlate == '2' || lastDigitPlate == '3') {
                printf("On Tuesday, vehicle with plate %s cannot circulate.\n", vehiclePlate);
            } else {
                printf("On Tuesday, vehicle with plate %s can circulate.\n", vehiclePlate);
            }
        } else if (strcmp(dayOfWeekInput, "WEDNESDAY") == 0) {
            if (lastDigitPlate == '4' || lastDigitPlate == '5') {
                printf("Wednesday is a rest day for vehicle with plate %s.\n", vehiclePlate);
            } else {
                printf("Vehicle with plate %s can circulate on Wednesday.\n", vehiclePlate);
            }
        } else if (strcmp(dayOfWeekInput, "THURSDAY") == 0) {
            if (lastDigitPlate == '6' || lastDigitPlate == '7') {
                printf("Vehicle with plate %s cannot circulate on Thursday.\n", vehiclePlate);
            } else {
                printf("Vehicle with plate %s can circulate on Thursday.\n", vehiclePlate);
            }
        } else if (strcmp(dayOfWeekInput, "FRIDAY") == 0) {
            if (lastDigitPlate == '8' || lastDigitPlate == '9') {
                printf("On Friday, vehicle with plate %s cannot circulate.\n", vehiclePlate);
            } else {
                printf("On Friday, vehicle with plate %s can circulate.\n", vehiclePlate);
            }
        } else if (strcmp(dayOfWeekInput, "SATURDAY") == 0 || strcmp(dayOfWeekInput, "SUNDAY") == 0) {
            printf("No restrictions during the weekend for vehicle with plate %s.\n", vehiclePlate);
        } else {
            printf("Invalid day of the week for vehicle with plate %s.\n", vehiclePlate);
        }
    } else {
        printf("Invalid plate for the day of the week %s.\n", dayOfWeekInput);
        if (strcmp(dayOfWeekInput, "MONDAY") != 0 &&
            strcmp(dayOfWeekInput, "TUESDAY") != 0 &&
            strcmp(dayOfWeekInput, "WEDNESDAY") != 0 &&
            strcmp(dayOfWeekInput, "THURSDAY") != 0 &&
            strcmp(dayOfWeekInput, "FRIDAY") != 0 &&
            strcmp(dayOfWeekInput, "SATURDAY") != 0 &&
            strcmp(dayOfWeekInput, "SUNDAY") != 0) {
            printf("Invalid day of the week for vehicle with plate %s.\n", vehiclePlate);
        }
    }

    return 0;
}
