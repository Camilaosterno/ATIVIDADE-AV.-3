#include <stdio.h>
#include <math.h>

int main() {
    double monthlyContribution, interestRate;
    int monthsToConsider;

    printf("Enter the value of the monthly contribution (in Brazilian Reais): R$ ");
    scanf("%lf", &monthlyContribution);

    printf("How many months do you want to consider? ");
    scanf("%d", &monthsToConsider);

    printf("Enter the monthly interest rate (in decimal): ");
    scanf("%lf", &interestRate);

    double accumulatedTotal = 0.0;

    for (int currentMonth = 1; currentMonth <= monthsToConsider; currentMonth++) {
        accumulatedTotal = (accumulatedTotal + monthlyContribution) * (1 + interestRate);

        printf("Accumulated total at the end of month %d: R$ %.2f\n", currentMonth, accumulatedTotal);
    }

    return 0;
}
